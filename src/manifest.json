{
  "manifest_version": 2,

  "name": "QR_Push",
  "description": "Push decoded or encoded QR code to your phone",
  "version": "0.1",

  "background": {
    "scripts": [
      "lib/qcode-decoder/build/qcode-decoder.min.js",
      "lib/pushbullet.min.js",
      "lib/qr-code.js",
      "background.js"
      ]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Drop your QR Code Here"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "http://ajax.googleapis.com/"
  ]
}
