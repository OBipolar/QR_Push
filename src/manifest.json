{
    "manifest_version": 2,

    "name": "QR_Push",
    "description": "Push decoded or encoded QR code to your phone",
    "version": "0.1",

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Drop your QR Code Here"
    },
    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "contextMenus",
        "http://ajax.googleapis.com/"
    ]
}
