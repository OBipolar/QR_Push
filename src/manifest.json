{
    "manifest_version": 2,

    "name": "QR_Drop",
    "description": "Drag and drop your QR Code to the icon and you can see the link sent to your phone",
    "version": "0.1",

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        // "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Drop your QR Code Here"
    },
    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "http://ajax.googleapis.com/"
    ]
}
